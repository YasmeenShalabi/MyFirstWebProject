    function tryCoding(){
        let answer=prompt("Have you ever tried coding? (yes/no)")
        answer=answer.toLowerCase()
        answer=answer.trim()
        if (answer === "yes"){
            alert("Great job, keep on learning to code!")

        }
        else{
            alert("You should definitely try She Codes!") 
        }
    }
    let button=document.querySelector("button")
    button.addEventListener("click",tryCoding)
